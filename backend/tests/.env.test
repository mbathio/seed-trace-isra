# backend/.env.test

# Base de données de test (différente de la base de développement)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/isra_seeds_test"

# JWT pour les tests
JWT_SECRET="test-secret-key-for-testing-only"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Serveur
PORT=3002
NODE_ENV="test"

# CORS
CLIENT_URL="http://localhost:3000"

# Bcrypt (moins de rounds pour des tests plus rapides)
BCRYPT_SALT_ROUNDS=4

# File Upload
MAX_FILE_SIZE=1048576
UPLOAD_PATH="./test-uploads"

# Désactiver les logs pendant les tests
LOG_LEVEL="error"