# backend/.env - Configuration corrigée

# Base de données
DATABASE_URL="postgresql://user1:user1@localhost:5432/isra_seeds?schema=public"

# JWT - ✅ CORRECTION: Secret sécurisé de 128 caractères
JWT_SECRET="isra-seeds-production-jwt-secret-key-2024-very-long-and-secure-for-production-environment-with-at-least-128-characters-change-this"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Serveur
PORT=3001
NODE_ENV=development
HOST="localhost"

# CORS
CLIENT_URL="http://localhost:5173"

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# PostgreSQL Docker (si utilisé)
POSTGRES_PASSWORD="isra_secure_password_2024"
POSTGRES_PORT=5432

# Redis Docker (si utilisé)
REDIS_PASSWORD="redis_secure_password_2024"
REDIS_PORT=6379

# Grafana (si monitoring activé)
GRAFANA_PASSWORD="admin123"

# Logging
LOG_LEVEL="debug"
ENABLE_CONSOLE_LOGS="true"
ENABLE_FILE_LOGS="true"