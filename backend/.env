# backend/.env - Configuration mise à jour

# Base de données
DATABASE_URL="postgresql://user1:user1@localhost:5432/isra_seeds?schema=public"

# JWT - ✅ CORRECTION: Secret plus long et sécurisé
JWT_SECRET="isra-seeds-production-jwt-secret-key-2024-change-this-in-production-make-it-very-long-and-secure-at-least-256-bits"
JWT_ACCESS_EXPIRY="3600m"
JWT_REFRESH_EXPIRY="7d"

# Serveur
PORT=3001
NODE_ENV=development
HOST="localhost"

# CORS
CLIENT_URL="http://localhost:5173"

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# PostgreSQL Docker (si utilisé)
POSTGRES_PASSWORD="isra_secure_password_2024"
POSTGRES_PORT=5432

# Redis Docker (si utilisé)
REDIS_PASSWORD="redis_secure_password_2024"
REDIS_PORT=6379

# Grafana (si monitoring activé)
GRAFANA_PASSWORD="admin123"