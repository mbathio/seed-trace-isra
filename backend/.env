# Backend Environment Variables - ISRA Seed Traceability System
# Copiez ce fichier en .env et modifiez les valeurs selon votre environnement

# Application
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
API_PREFIX=/api/v1
APP_NAME="ISRA Seed Traceability System"
APP_VERSION=1.0.0

# Client URLs (Frontend)
CLIENT_URL=http://localhost:5173

# Database PostgreSQL
DATABASE_URL=postgresql://user1:user1@localhost:5432/isra_seeds?schema=public
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user1
DB_PASSWORD=user1
DB_DATABASE=isra_seeds
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT Authentication
jwt: {
  secret: getEnvVar("JWT_SECRET", "default-jwt-secret-change-me"),
  expiresIn: getEnvVar("JWT_EXPIRES_IN", "1d"),
  refreshSecret: getEnvVar("JWT_REFRESH_SECRET", "default-refresh-secret-change-me"),
  refreshExpiresIn: getEnvVar("JWT_REFRESH_EXPIRES_IN", "7d"),
  // Supprimer la duplication et utiliser les bons noms
},

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=true
ENABLE_FILE_LOGS=true
LOG_FILE_PATH=./logs

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=noreply@isra.sn

# Storage Configuration
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
PUBLIC_PATH=/uploads

# AWS S3 (si STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
AWS_S3_BUCKET=

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
COLLECT_DEFAULT_METRICS=true
HEALTH_CHECK_INTERVAL=30000

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN= http://localhost:3001

# Geolocation (Optional)
MAPBOX_TOKEN=

# Offline Sync
OFFLINE_SYNC_ENABLED=true
SYNC_INTERVAL=300000
SYNC_MAX_RETRIES=3